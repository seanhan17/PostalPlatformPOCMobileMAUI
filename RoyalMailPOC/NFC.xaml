<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RoyalMailPOC.NFC"
             Title="NFC">
    <StackLayout>
        <Label Text="NFC"
                VerticalOptions="Center" 
                HorizontalOptions="Center" />

        <Button 
                x:Name="ActivateNFCButton"
                Text="Activate NFC"
                Clicked="OnActivateNFC"
                HorizontalOptions="Center"
                Margin="5"/>

        <Button 
                x:Name="DeactivateNFCButton"
                Text="Deactivate NFC"
                Clicked="OnDeactivateNFC"
                HorizontalOptions="Center"
                Margin="5" />
    </StackLayout>
</ContentPage>
