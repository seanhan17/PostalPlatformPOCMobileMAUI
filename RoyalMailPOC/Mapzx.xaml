<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RoyalMailPOC.Mapzx"
             Title="Map">
    <StackLayout>
        <Label Text="Map"
                VerticalOptions="Center" 
                HorizontalOptions="Center" />

        <Button 
                x:Name="NavigateButton"
                Text="Navigate 1"
                Clicked="OnNavigate"
                HorizontalOptions="Center"
                Margin="5" />

        <Button 
                x:Name="NavigateTwoButton"
                Text="Navigate 2"
                Clicked="OnNavigateTwo"
                HorizontalOptions="Center"
                Margin="5" />
        <Button 
                x:Name="GetGeolocationButton"
                Text="Get Current Location"
                Clicked="OnGetGeolocation"
                HorizontalOptions="Center"
                Margin="5" />
    </StackLayout>
</ContentPage>
